<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:elevation="8dp"
        android:id="@+id/viewShutter"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/shutter_button_bg"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <ImageView
        android:elevation="8dp"
        android:contentDescription="@null"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitCenter"
        android:id="@+id/imageViewFlash"
        android:padding="10dp"
        android:src="@mipmap/ti_flash_off"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <ImageView
        android:elevation="8dp"
        android:contentDescription="@null"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageViewFlash"
        android:scaleType="fitCenter"
        android:id="@+id/imageViewSwitch"
        android:padding="10dp"
        android:src="@mipmap/ti_switch_camera"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>